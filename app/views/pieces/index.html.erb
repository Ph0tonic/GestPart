
<!-- Content Header (Page header) -->
<div class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1 class="m-0 text-dark">Pieces of music</h1>
      </div><!-- /.col -->
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item active">Pieces</li>
        </ol>
      </div><!-- /.col -->
    </div><!-- /.row -->
  </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<!-- Main content -->
<div class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-header">
            <div class="row">
              <div class="col-sm-6">
                <h3 class="card-title">Pieces</h3>
              </div>
              <div class="col-sm-6">
                <%= link_to(new_piece_path, class: "btn btn-success float-right") do %>
                  <i class="fas fa-plus-circle"></i> <span>Add New Piece</span>
                <% end %>
              </div>
            </div>
          </div>
          <!-- /.card-header -->
          <div class="card-body">
            <table id="pieces-table" class="table table-bordered table-striped dt-responsive nowrap dataTable" role="grid" aria-describedby="pieces-info" style="width:100%">
              <thead>
                <tr role="row">
                  <th class="sorting_asc" tabindex="0" aria-controls="pieces-table" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending">Title</th>
                  <th class="sorting" tabindex="0" aria-controls="pieces-table" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending">Distribution</th>
                  <th class="sorting" tabindex="0" aria-controls="pieces-table" rowspan="1" colspan="1" aria-label="Platform(s): activate to sort column ascending">No</th>
                  <th class="sorting" tabindex="0" aria-controls="pieces-table" rowspan="1" colspan="1" aria-label="Engine version: activate to sort column ascending">Divers</th>
                  <th class="sorting" tabindex="0" aria-controls="pieces-table" rowspan="1" colspan="1" aria-label="CSS grade: activate to sort column ascending">Publishing house</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% @pieces.each do |piece| %>
                <tr role="row" class="odd">
                  <td class="sorting_1"><%= piece.title %></td>
                  <td><%= piece.distribution %></td>
                  <td><%= piece.no %></td>
                  <td><%= piece.divers %></td>
                  <td>
                    <% if piece.publishing_house %>
                    <%= piece.publishing_house.name %>
                    <% end %>
                  </td>
                  <td>
                    <ul class="list-inline">
                      <li class="list-inline-item">
                        <%= link_to(piece) do %>
                          <i class="far fa-eye"></i>
                        <% end %>
                      </li>
                      <li class="list-inline-item">
                        <%= link_to(edit_piece_path(piece)) do %>
                          <i class="fas fa-pencil-alt text-warning"></i>
                        <% end %>
                      </li>
                      <li class="list-inline-item">
                        <%= link_to(piece, method: :delete, data: { confirm: 'Are you sure?' }) do %>
                          <i class="fas fa-trash text-danger"></i>
                        <% end %>
                      </li>
                    </ul>
                  </td>
                </tr>
                <% end %>
              </tbody>
              <tfoot>
                <tr>
                  <th class="sorting_asc" tabindex="0" aria-controls="pieces-table" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending">Title</th>
                  <th class="sorting" tabindex="0" aria-controls="pieces-table" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending">Distribution</th>
                  <th class="sorting" tabindex="0" aria-controls="pieces-table" rowspan="1" colspan="1" aria-label="Platform(s): activate to sort column ascending">No</th>
                  <th class="sorting" tabindex="0" aria-controls="pieces-table" rowspan="1" colspan="1" aria-label="Engine version: activate to sort column ascending">Divers</th>
                  <th class="sorting" tabindex="0" aria-controls="pieces-table" rowspan="1" colspan="1" aria-label="CSS grade: activate to sort column ascending">Publishing house</th>
                  <th>Actions</th>
                </tr>
              </tfoot>
            </table>
            <script>
            $(document).ready( function () {
              $('#pieces-table').DataTable({
                "columns": [
                  null,
                  null,
                  null,
                  null,
                  null,
                  { "orderable": false, "searchable": false}
                ]});
            });
            </script>
          </div>
        </div>
        <!-- /.card-body -->
      </div>
    </div>
    <!-- /.row -->
  </div><!-- /.container-fluid -->
</div>
<!-- /.content -->


<p id="notice"><%= notice %></p>
