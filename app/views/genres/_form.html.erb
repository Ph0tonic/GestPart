<%= form_with(model: genre, local: true) do |form| %>
  <% if genre.errors.any? %>
    <div class="row">
      <div class="col-lg-12">
        <div class="callout callout-danger">
          <h5><i class="fas fa-exclamation-circle"></i> <h2><%= pluralize(genre.errors.count, "error") %> prohibited this genre from being saved:</h2></h5>
          <ul>
          <% genre.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <div class="row">
    <div class="col-lg-12">
      <div class="card card-primary card-outline">
        <div class="card-header">
          <h5 class="card-title">Informations</h5>
        </div>
        <div class="card-body">
          <div class="form-group">
            <%= form.label :name %>
            <%= form.text_area :name, :class => "form-control" %>
          </div>
          <div class="row justify-content-end">
            <div class="col-auto">
              <%= form.submit 'Save', :class => 'mt-2 btn btn-primary' %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- /.col-md-12 -->
  </div>
  <!-- /.row -->
  
<% end %>
