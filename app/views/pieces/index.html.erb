
<!-- Content Header (Page header) -->
<div class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1 class="m-0 text-dark">Piece index</h1>
      </div><!-- /.col -->
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item"><%= link_to 'Piece', pieces_path %></li>
          <li class="breadcrumb-item active">Edit</li>
        </ol>
      </div><!-- /.col -->
    </div><!-- /.row -->
  </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<!-- Main content -->
<div class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-header">
            <h3 class="card-title">Pieces of music</h3>
          </div>
          <!-- /.card-header -->
          <div class="card-body">
                <table id="pieces-table" class="table table-bordered table-striped dt-responsive nowrap dataTable" role="grid" aria-describedby="pieces-info" style="width:100%">
                  <thead>
                    <tr role="row">
                      <th class="sorting_asc" tabindex="0" aria-controls="pieces-table" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending">Title</th>
                      <th class="sorting" tabindex="0" aria-controls="pieces-table" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending">Distribution</th>
                      <th class="sorting" tabindex="0" aria-controls="pieces-table" rowspan="1" colspan="1" aria-label="Platform(s): activate to sort column ascending">No</th>
                      <th class="sorting" tabindex="0" aria-controls="pieces-table" rowspan="1" colspan="1" aria-label="Engine version: activate to sort column ascending">Divers</th>
                      <th class="sorting" tabindex="0" aria-controls="pieces-table" rowspan="1" colspan="1" aria-label="CSS grade: activate to sort column ascending">Publishing house</th></tr>
                    </thead>
                    <tbody>
                      <% @pieces.each do |piece| %>
                      <tr role="row" class="odd">
                        <td class="sorting_1"><%= piece.title %></td>
                        <td><%= piece.distribution %></td>
                        <td><%= piece.no %></td>
                        <td><%= piece.divers %></td>
                        <td>
                          <% if piece.publishing_house %>
                          <%= piece.publishing_house.name %>
                          <% end %>
                        </td>
                      </tr>
                      <% end %>
                    </tbody>
                    <tfoot>
                      <tr>
                        <th class="sorting_asc" tabindex="0" aria-controls="pieces-table" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending">Title</th>
                        <th class="sorting" tabindex="0" aria-controls="pieces-table" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending">Distribution</th>
                        <th class="sorting" tabindex="0" aria-controls="pieces-table" rowspan="1" colspan="1" aria-label="Platform(s): activate to sort column ascending">No</th>
                        <th class="sorting" tabindex="0" aria-controls="pieces-table" rowspan="1" colspan="1" aria-label="Engine version: activate to sort column ascending">Divers</th>
                        <th class="sorting" tabindex="0" aria-controls="pieces-table" rowspan="1" colspan="1" aria-label="CSS grade: activate to sort column ascending">Publishing house</th>
                      </tr>
                    </tfoot>
                  </table>
                  <script>
                  $(document).ready( function () {
                      $('#pieces-table').DataTable();
                  });
                  </script>
                </div>
          </div>
          <!-- /.card-body -->
        </div>
      </div>
    </div>
    <!-- /.row -->
  </div><!-- /.container-fluid -->
</div>
<!-- /.content -->

