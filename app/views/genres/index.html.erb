<!-- Content Header (Page header) -->
<div class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1 class="m-0 text-dark">Genres</h1>
      </div><!-- /.col -->
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item active">Genres</li>
        </ol>
      </div><!-- /.col -->
    </div><!-- /.row -->
  </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<!-- Main content -->
<div class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-header">
            <div class="row">
              <div class="col-sm-6">
                <h3 class="card-title">Genres</h3>
              </div>
              <div class="col-sm-6">
                <%= link_to(new_genre_path, class: "btn btn-success float-right") do %>
                  <i class="fas fa-plus-circle"></i> <span>Add New Genre</span>
                <% end %>
              </div>
            </div>
          </div>
          <!-- /.card-header -->
          <div class="card-body">
            <table id="genres-table" class="table table-bordered table-striped dt-responsive nowrap dataTable" role="grid" aria-describedby="pieces-info" style="width:100%">
              <thead>
                <tr role="row">
                  <th class="sorting" tabindex="0" aria-controls="genres-table" rowspan="1" colspan="1" aria-label="storage">Name</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% @genres.each do |genre| %>
                <tr role="row" class="odd">
                  <td class="sorting_1"><%= genre.name %></td>
                  <td>
                    <ul class="list-inline">
                      <li class="list-inline-item">
                        <%= link_to(genre) do %>
                          <i class="far fa-eye"></i>
                        <% end %>
                      </li>
                      <li class="list-inline-item">
                        <%= link_to(edit_genre_path(genre)) do %>
                          <i class="fas fa-pencil-alt text-warning"></i>
                        <% end %>
                      </li>
                      <li class="list-inline-item">
                        <%= link_to(genre, method: :delete, data: { confirm: 'Are you sure?' }) do %>
                          <i class="fas fa-trash text-danger"></i>
                        <% end %>
                      </li>
                    </ul>
                  </td>
                </tr>
                <% end %>
              </tbody>
              <tfoot>
                <tr>
                  <th class="sorting" tabindex="0" aria-controls="genres-table" rowspan="1" colspan="1" aria-label="storage">Name</th>
                  <th>Actions</th>
                </tr>
              </tfoot>
            </table>
            <script>
            $(document).ready( function () {
              $('#genres-table').DataTable({
                "order": [[ 0, "asc" ]]
              });
            });
            </script>
          </div>
        </div>
        <!-- /.card-body -->
      </div>
    </div>
    <!-- /.row -->
  </div><!-- /.container-fluid -->
</div>
<!-- /.content -->

<p id="notice"><%= notice %></p>
