<%= form_with(model: voice, local: true) do |form| %>
  <% if voice.errors.any? %>
    <div id="error_explanation">
      <h2> prohibited this vocie from being saved:</h2>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <div class="callout callout-danger">
          <h5><i class="fas fa-exclamation-circle"></i> <%= pluralize(voice.errors.count, "error") %></h5>
          <ul>
          <% voice.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <div class="row">
    <div class="col-lg-12">
      <div class="card card-primary card-outline">
        <div class="card-header">
          <h5 class="card-title">Informations</h5>
        </div>
        <div class="card-body">
          <div class="form-group">
            <%= form.label :name %>
            <%= form.text_field :name, :class => "form-control" %>
          </div>
          <div class="row">
            <div class="col-lg-4">
              <%= form.label :number %>
              <%= form.number_field :number, :class => "form-control" %>
            </div>
            <div class="col-lg-4">
              <%= form.label :key %>
              <%= form.text_field :key, :class => "form-control" %>
            </div>
            <div class="col-lg-4">
              <%= form.label :orderby %>
              <%= form.number_field :orderby, :class => "form-control" %>
            </div>
          </div>
          <div class="row justify-content-end">
            <div class="col-auto">
              <%= form.submit 'Save', :class => 'mt-2 btn btn-primary' %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- /.col-md-12 -->
  </div>
  <!-- /.row -->

<% end %>
